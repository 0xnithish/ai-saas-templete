# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database URL (URL-encode special characters in password!)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.your-project.supabase.co:5432/postgres

# Better Auth Configuration
BETTER_AUTH_SECRET=your_random_secret_here  # Generate with: openssl rand -base64 32
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
#NGROK_URL=https://your-ngrok-url.ngrok.io  # Optional: Add your ngrok URL for testing

# Resend Email Service
RESEND_API_KEY=re_your_key_here
EMAIL_FROM=onboarding@resend.dev  # Or your verified domain email

# Polar Payments Configuration
POLAR_ACCESS_TOKEN=polar_sandbox_your_token_here  # Get from https://polar.sh/settings
POLAR_WEBHOOK_SECRET=your_webhook_secret_here  # Get from Polar webhook settings
POLAR_SUCCESS_URL=http://localhost:3000/success?checkout_id={CHECKOUT_ID}
POLAR_PRODUCT_ID_FREE=32cf4ffe-5b33-4ffa-b9f8-40adfdfc4b6d  # Replace with your Free product ID
POLAR_PRODUCT_ID_PREMIUM=your_premium_product_id_here  # Replace with your Premium product ID